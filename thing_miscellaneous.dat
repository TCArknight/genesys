  <thing
    id="mscUserImg"
    name="User Image"
    compset="UserImage">
    </thing>

  <!-- Ability slot resource to track the pool of ability slots being spent -->
  <thing
    id="resAbility"
    name="Ability Slots"
    compset="Resource">
    <fieldval field="resObject" value="Ability"/>

    <!-- Automatically add the resource to every actor -->
    <tag group="Helper" tag="Bootstrap"/>

    <!-- Use the starting ability slots as our initial maximum -->
    <eval index="1" phase="Setup" priority="1000"><![CDATA[
      field[resMax].value = herofield[acStartAbi].value
      ]]></eval>
    </thing>
	
  <thing
    id="resHeroicAbility"
    name="Heroic Ability Slots"
    compset="Resource">
    <fieldval field="resObject" value="Ability"/>

    <!-- Automatically add the resource to every actor -->
    <tag group="Helper" tag="Bootstrap"/>

    <!-- Use the starting ability slots as our initial maximum -->
    <eval index="1" phase="Setup" priority="1000"><![CDATA[
      field[resMax].value = 1
      ]]></eval>
    </thing>

  <thing
    id="resHeroicUpgrades"
    name="Heroic Ability Upgrades"
    compset="Resource">
    <fieldval field="resObject" value="Ability"/>

    <!-- Automatically add the resource to every actor -->
    <tag group="Helper" tag="Bootstrap"/>

    <!-- Use the starting ability slots as our initial maximum -->
    <eval index="1" phase="Setup" priority="1000"><![CDATA[
      field[resMax].value = 0
      ]]></eval>
    </thing>	
  <!-- Ability slot resource to track the pool of ability slots being spent -->
  <thing
